@using Domain.Entities
@using Domain.Enums
@using restaurant_web_app.Enums
@model List<Domain.Entities.ContactUs>

@{
    ViewData["Title"] = "Contact Us List";
}

<style>
    .table-title {
        padding-bottom: 10px;
        margin: 0 0 10px;
    }
</style>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>



<div class="table-responsive">
   
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Date</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ContactUs item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Date</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.Subject</td>
                    <td>@item.Message</td>
                    <td>
                        <a class="btn btn-sm"
                           href="@Url.Action("DeleteContactUs", "Admin", new {id = item.Id})">
                            <i class="fas fa-trash-alt"></i></a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>