@using Application.BookingOptions.Queries
@using Domain.Entities
@using Newtonsoft.Json
@model restaurant_web_app.ViewModels.BasicBookingOptionRuleViewModel
@{
    ViewData["Title"] = "Basic Scheduling Rule";
}

@section Scripts{

    <script src="~/js/admin/basic_booking_schedule.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            window.timesArray = @Html.Raw(JsonConvert.SerializeObject(Model.TimesDictionary));
            window.model = @Html.Raw(JsonConvert.SerializeObject(Model.BasicBookingScheduleRule));

            buildForm(model, timesArray);
        });
    </script>
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="container">
    <div class="row  ">
        <div class="row justify-content-center">
            <form method="post" action="@Url.Action("UpdateBookingBasicBookingSchedulerRule", "Admin")">
                <div id="mainForm"></div>
            </form>
        </div>
    </div>
</div>

