@using Application.BookingOptions.BasicScheduleRule.Query
@using Application.BookingOptions.OptionsFactory
@using Application.BookingOptions.Queries
@using Domain.Entities
@model List<Domain.Entities.BasicBookingScheduleRule>
@{
    ViewData["Title"] = "Booking Options";
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>


<div class="col-">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Basic Scheduling Rules 
                <a class="btn btn-dark "
                   href="@Url.Action("AddBasicBookingSchedulingRule", "Admin")">
                    <i class="fas fa-plus"></i>
                    Add New
                </a></h5>
            <p class="card-text">choose what times each week your restaurant is available to book reservations</p>

            <table class="table table-striped table-sm text-center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Monday</th>
                        <th>Tuesday</th>
                        <th>Wednesday</th>
                        <th>Thursday</th>
                        <th>Friday</th>
                        <th>Saturday</th>
                        <th>Sunday</th>
                        <th>Start Time</th>
                        <th>End time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                @foreach (BasicBookingScheduleRule item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@Html.CheckBox("1", item.MondaySelected,new{@class= "form-check-input", disabled=true})</td>
                        <td>
                            @Html.CheckBox("2", item.TuesdaySelected, new { @class = "form-check-input", disabled = true })
                        </td>
                        <td>
                            @Html.CheckBox("3", item.WednesdaySelected, new { @class = "form-check-input", disabled = true })
                            </td>
                        <td>
                            @Html.CheckBox("4", item.ThursdaySelected, new { @class = "form-check-input", disabled = true })

                        </td>
                        <td class="text-center">
                            @Html.CheckBox("5", item.FridaySelected, new { @class = "form-check-input", disabled = true })
                        </td>
                        <td>
                            @Html.CheckBox("6", item.SaturdaySelected, new { @class = "form-check-input", disabled = true })
                        </td>
                        <td>
                            @Html.CheckBox("7", item.SundaySelected, new { @class = "form-check-input", disabled = true })
                        </td>
                        <td>@BasicScheduleRuleFactory.GetTimeFromTimeId(item.StartTimeId)</td>
                        <td>@BasicScheduleRuleFactory.GetTimeFromTimeId(item.EndTimeId)</td>
                        <td>
                            <a class="btn btn-sm"
                               href="@Url.Action("BasicBookingSchedulingRuleEdit", "Admin", new {id = item.Id})">
                                <i class="far fa-edit"></i>
                            </a>
                            <a class="btn btn-sm"
                               href="@Url.Action("DeleteBasicBookingSchedulerRule", "Admin", new {id = item.Id})">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>

                    </tr>
                }

                </tbody>
            </table>

        </div>
    </div>
</div>
   

