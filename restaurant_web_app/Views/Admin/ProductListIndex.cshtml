@using Domain.Entities
@using Domain.Enums
@using restaurant_web_app.Enums
@model Application.Contact.Queries.GetAllProductsVm

@{
    ViewData["Title"] = "Product List";
}

<style>
    .table-title {
        padding-bottom: 10px;
        margin: 0 0 10px;
    }
</style>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>


<h5 class="card-title">Add Product
    <a class="btn btn-dark "
       href="@Url.Action("ProductAdd", "Admin")">
        <i class="fas fa-plus"></i>
        Add New
    </a></h5>
<div class="table-responsive">
   
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Price Symbol</th>
                <th>IsNew</th>
                <th>DateCreated</th>
                <th>DateUpdated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="@item.ProductImageBase64" width="370" height="420"/>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.PriceSymbol</td>
                    <td>@item.IsNew</td>
                    <td>@item.DateCreated</td>
                    <td>@item.DateUpdated</td>
                    <td>
                        <a class="btn btn-sm"
                           href="@Url.Action("ProductDetail" ,"Admin" , new {id=item.Id})">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a class="btn btn-sm"
                           href="@Url.Action("ProductEdit","Admin" , new {id=item.Id})">
                            <i class="far fa-edit"></i>
                        </a>
                        <a class="btn btn-sm"
                           href="@Url.Action("DeleteProduct", "Admin", new {id = item.Id})">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>